<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hamming.claritear.PlayingActivity"
    android:background="@drawable/handguitarblur">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:textSize="35dp"
        android:id="@+id/tv_play_score"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:background="#80000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_play_printscore"
        android:text="0"
        android:layout_toRightOf="@+id/tv_play_score"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#80000000"
        android:textSize="35dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="PLAY CHORD"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:id="@+id/btn_play_playChord"
        android:onClick="playChord"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_maj"
        android:layout_below="@id/btn_play_playChord"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="Major"
        android:onClick="clickMajor"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_min"
        android:layout_below="@id/btn_play_playChord"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="Minor"
        android:onClick="clickMinor"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_maj7"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_maj"
        android:text="Major7"
        android:onClick="clickMajor7"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_min7"
        android:layout_below="@+id/btn_min"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="Minor7"
        android:onClick="clickMinor7"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dim"
        android:layout_below="@+id/btn_maj7"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:text="Dim"
        android:onClick="clickDim"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dim7"
        android:layout_below="@+id/btn_min7"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="Dim7"
        android:onClick="clickDim7"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sus2"
        android:layout_below="@id/btn_dim"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:text="Sus2"
        android:onClick="clickSus2"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sus4"
        android:layout_below="@id/btn_dim7"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="Sus4"
        android:onClick="clickSus4"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_aug"
        android:layout_below="@+id/btn_sus2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:text="Aug"
        android:onClick="clickAug"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_seventh"
        android:layout_below="@id/btn_sus4"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:text="Seventh"
        android:onClick="clickSeventh"/>

</RelativeLayout>
