<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hamming.claritear.HomeActivity"
    android:background="@drawable/paino2blur"
    android:id="@+id/home_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, "
        android:textSize="27dp"
        android:textColor="#000000"
        android:background="#80FFFFFF"
        android:id="@+id/tv_main_hello"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_main_hello"
        android:text="username"
        android:textSize="27dp"
        android:textColor="#000000"
        android:background="#80FFFFFF"
        android:id="@+id/tv_main_username"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btn_main_start"
        android:layout_marginBottom="30dp"
        android:id="@+id/iv_main_logohome"
        android:layout_centerHorizontal="true"
        android:src="@drawable/claritear_white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START SESSION"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:onClick="startPlaying"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:id="@+id/btn_main_start"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_main_start"
        android:layout_marginTop="60dp"
        android:text="Highest Score: "
        android:id="@+id/tv_main_highestscore"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:background="#95FFFFFF"
        android:textSize="27dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_main_highestscore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#000000"
        android:background="#95FFFFFF"
        android:id="@+id/tv_main_highscore"
        android:textSize="27dp"/>

</RelativeLayout>
