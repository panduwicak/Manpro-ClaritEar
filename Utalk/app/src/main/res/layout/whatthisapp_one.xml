<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#3300cc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_one1"
        android:layout_marginTop="70dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Hi, Welcome!"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_one1"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_one2"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:text="Thank you for choosing Ãœtalk"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/ivone1"
        android:layout_below="@+id/tv_one2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/comments16"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/ivone1"
        android:id="@+id/tv_one3"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:text="Swipe left if you want to know what this app can do for you"/>

</RelativeLayout>