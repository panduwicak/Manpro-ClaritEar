<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e89ce">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Contact Us"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:background="#626262"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please send us your comments and feedbacks"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="79dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/titlesend" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/titlesend"
        android:hint="you can send us suggestions about new situations or questions"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/emailbox"
        android:background="#ffffff"
        android:gravity="top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailbox"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/send"
        android:text="Send Email"
        android:textColor="#ffffff"/>
</RelativeLayout><!-- From: file:/C:/Users/wicakcak/AndroidStudioProjects/Utalk/app/src/main/res/layout/send_email.xml -->